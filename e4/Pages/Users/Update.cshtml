@page
@model e4.Pages.Users.UpdateModel
@{
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-9 col-12 mx-auto">
            <div class="card">
                 <div class="card-header">
                    <strong>Update User</strong>
                </div>
                <div class="card-body">
                <hr class="horizontal dark my-2">
                <form method="post" asp-page="Update">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ObjectToUpdate.Id"/>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="ObjectToUpdate.Name" type="text" class="form-control" />
                        @Html.ValidationMessageFor(model => model.ObjectToUpdate.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Surname</label>
                        <input asp-for="ObjectToUpdate.Surname" type="text" class="form-control" />
                        @Html.ValidationMessageFor(model => model.ObjectToUpdate.Surname, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Cell Number</label>
                        <input asp-for="ObjectToUpdate.CellNumber" type="number"  minlength="10" class="form-control" />
                        @Html.ValidationMessageFor(model => model.ObjectToUpdate.CellNumber, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-flex justify-content-start mt-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                </div>
     
            </div>
        </div>
    </div>
</div>
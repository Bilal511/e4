@page
@model e4.Pages.Users.IndexModel
@{
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-9 col-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <strong>Users</strong>
                </div>
                <div class="card-body">

                    <a href="/Users/CreateUser" class="btn btn-primary">Create User</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th scope="col">First</th>
                                <th scope="col">Surnames</th>
                                <th scope="col">Cell Number</th>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ObjectToDisplay.Any())
                            {
                                foreach (var i in Model.ObjectToDisplay)
                                {
                                    <tr>

                                        <td>@i.Name</td>
                                        <td>@i.Surname</td>
                                        <td>@i.CellNumber</td>
                                        <td>
                                            <a href="/Users/Update?Id=@i.Id">Update</a>
                                            <a href="/Users/Delete?Id=@i.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
